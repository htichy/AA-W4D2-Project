<h1> Cat <h1>
  <form action="/cats" method="post">
    <label>Name:
      <input type="name" name="cat[name]" value="" />
    </label>

    <label>Sex:
      <input type="radio" id="M" name="cat[sex]" />
      <label for="M">Male</label>
      <input type="radio" id="F" name="cat[sex]" />
      <label for="F">Female</label>
   </label>
   
   <label>Color
    <select id="cat[color]">
      <option disabled selected>--Please choose your pet's color--</option>
      <option value="black">black</option>
      <option value="white">white</option>
      <option value="tabby">tabby</option>
      <option value="black and white">black and white</option>
      <option value="grey">grey</option>
      <option value="calico">calico</option>
    </select>
   </label>
   
   <label>Birthday
     <input type="date" id="cat[birth_date]" />
   </label>
     
   <label>Description
     <textarea name="cat[description]"></textarea>
   </label>
    
  </form>